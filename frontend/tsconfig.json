{
    "compilerOptions": {
        // project options
        "lib": [
            "ESNext",
            "dom"
        ], // specifies which default set of type definitions to use ("DOM", "ES6", etc)
        "target": "ES6", 

        // Module resolution
        "baseUrl": "./",
        "esModuleInterop": true, 
        "moduleResolution": "node",

        // Linter Checks
        "noImplicitReturns": false,

        "jsx": "react-jsx",
        "resolveJsonModule": true,
        },
        
    "include": [
        "./**/*.ts",
        "./**/*.tsx"],
    "exclude": [
        "node_modules/**/*"
    ],
    "ts-node": {
        "esm": true
    }

}